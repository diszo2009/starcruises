<config>
    <modules>
        <MagenThemes_Megamenu>
            <version>2.0.2</version>
        </MagenThemes_Megamenu>
    </modules>
    <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>MagenThemes_Megamenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>
        <layout>
            <updates>
                <megamenu>
                    <file>megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
	    <megamenu>
		<use>admin</use>
		<args>
		    <module>MagenThemes_Megamenu</module>
		    <frontName>megamenu</frontName>
		</args>
	    </megamenu>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<megamenu>
					<file>megamenu.xml</file>
				</megamenu>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <megamenu>
                <class>MagenThemes_Megamenu_Model</class>
                <resourceModel>megamenu_mysql4</resourceModel>
            </megamenu>
            <megamenu_mysql4>
                <class>MagenThemes_Megamenu_Model_Mysql4</class>
                <entities>
                    <megamenu>
                        <table>megamenu</table>
                    </megamenu>
		    <megamenu_category>
			<table>megamenu_category</table>
		    </megamenu_category>
		    <megamenu_block>
			<table>megamenu_block</table>
		    </megamenu_block>
		    <megamenu_link>
			<table>megamenu_link</table>
		    </megamenu_link>
		    <megamenu_group>
			<table>megamenu_relation_group</table>
		    </megamenu_group>
		    <group>
                        <table>megamenu_group</table>
                    </group>
		    <group_store>
			<table>megamenu_group_store</table>
		    </group_store>
                </entities>
            </megamenu_mysql4>
        </models>
        <resources>
            <megamenu_setup>
                <setup>
                    <module>MagenThemes_Megamenu</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </megamenu_setup>
            <megamenu_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </megamenu_write>
            <megamenu_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </megamenu_read>
        </resources>
        <blocks>
            <megamenu>
                <class>MagenThemes_Megamenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>MagenThemes_Megamenu_Helper</class>
            </megamenu>
        </helpers>
        <events>
	    	<controller_action_layout_generate_blocks_after>
				<observers>
		    		<megamenu>
						<type>singleton</type>
						<class>megamenu/observer</class>
						<method>controller_action_layout_generate_blocks_after</method>
		    		</megamenu>
				</observers>
	    	</controller_action_layout_generate_blocks_after>
		</events>
    </global>
    <default>
    	<megamenu>
    		<general>
    			<active>1</active>
    		</general>
    		<fancy>
    			<active>1</active>
    			<duration>0.9</duration>
    		</fancy>
    	</megamenu>
    </default>
</config>