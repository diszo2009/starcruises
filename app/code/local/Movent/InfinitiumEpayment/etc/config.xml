<config>
	<modules>
		<Movent_InfinitiumEpayment>
			<version>1.6.0.0</version>
		</Movent_InfinitiumEpayment>
	</modules>
	<global>
		<models>
			<infinitiumepayment>
				<class>Movent_InfinitiumEpayment_Model</class>
			</infinitiumepayment>
		</models>
		<blocks>
			<infinitiumepayment>
				<class>Movent_InfinitiumEpayment_Block</class>
			</infinitiumepayment>
		</blocks>
		<helpers>
			<infinitiumepayment>
				<class>Movent_InfinitiumEpayment_Helper</class>
			</infinitiumepayment>
		</helpers>
		<payment>
			<epayment>
				<types>
					<AE>
						<code>AE</code>
						<name>American Express</name>
						<order>0</order>
						<starcode>A</starcode>
					</AE>
					<VI>
						<code>VI</code>
						<name>Visa</name>
						<order>10</order>
						<starcode>V</starcode>
					</VI>
					<MC>
						<code>MC</code>
						<name>MasterCard</name>
						<order>20</order>
						<starcode>M</starcode>
					</MC>
					<JCB>
						<code>JCB</code>
						<name>JCB</name>
						<order>50</order>
						<starcode>J</starcode>
					</JCB>
				</types>
				<paymentmethod>
					<types>
						<cc>
							<code>1</code>
							<name>Credit Card</name>
						</cc>
						<maybank2u>
							<code>2</code>
							<name>Maybank2u</name>
						</maybank2u>
						<fpx>
							<code>3</code>
							<name>FPX (reserved for future)</name>
						</fpx>
						<cup>
							<code>4</code>
							<name>CUP</name>
						</cup>
						<kiosk>
							<code>5</code>
							<name>Kiosk (reserved for future)</name>
						</kiosk>
						<cash>
							<code>6</code>
							<name>Cash (reserved for future)</name>
						</cash>
						<seven_eleven>
							<code>7</code>
							<name>7-eleven (reserved for future)</name>
						</seven_eleven>
						<cimb_clicks>
							<code>8</code>
							<name>CIMB Clicks</name>
						</cimb_clicks>
						<enets>
							<code>9</code>
							<name>ENets</name>
						</enets>
						<pbb_payment_agent>
							<code>10</code>
							<name>PBB Payment Agent</name>
						</pbb_payment_agent>
						<midazz_prepaid>
							<code>11</code>
							<name>MIDAZZ Prepaid</name>
						</midazz_prepaid>
						<klikbca>
							<code>12</code>
							<name>KlikBCA</name>
						</klikbca>
						<paypalexpresscheckout>
							<code>13</code>
							<name>Paypal Express Checkout (reserved for future)</name>
						</paypalexpresscheckout>
						<rhb>
							<code>14</code>
							<name>RHB Payment Gateway</name>
						</rhb>
					</types>
				</paymentmethod>
				<transaction>
					<types>
						<sales>
							<code>1</code>
							<name>Sales</name>
						</sales>
						<authorize>
							<code>3</code>
							<name>Authorize</name>
						</authorize>
					</types>
				</transaction>
				<integrationtypes>
					<types>
						<direct>
							<code>direct</code>
							<name>Direct</name>
						</direct>
						<window>
							<code>window</code>
							<name>Window</name>
						</window>
					</types>
				</integrationtypes>
			</epayment>
			<groups>
				<offline>Offline Payment Methods</offline>
			</groups>
		</payment>
	</global>
	<default>
		<payment>
			<epayment>
				<active>1</active>
				<cctypes>AE,VI,MC,DI</cctypes>
				<!--<model>infinitiumepayment/method_starccsave</model>-->
				<order_status>pending</order_status>
				<title>Pay by Credit Card</title>
				<allowspecific>0</allowspecific>
				<enable_testmode>1</enable_testmode>
				<gatewayurl_direct_live><![CDATA[https://epg2.starcruises.com/payment/PaymentInterface.jsp]]></gatewayurl_direct_live>
				<gatewayurl_window_live><![CDATA[https://epg2.starcruises.com/payment/PaymentWindow.jsp]]></gatewayurl_window_live>
				<merchant_id_live>SCB2B2C_LIVE</merchant_id_live>
				<merchant_password_live>gbdww</merchant_password_live>
				<gatewayurl_direct_test><![CDATA[https://epgdev.starcruises.com/payment/PaymentInterface.jsp]]></gatewayurl_direct_test>
				<gatewayurl_window_test><![CDATA[https://epgdev.starcruises.com/payment/PaymentWindow.jsp]]></gatewayurl_window_test>
				<merchant_id_test>SCM_UAT</merchant_id_test>
				<merchant_password_test>LHYQV</merchant_password_test>
				<paymentmethod>1</paymentmethod>
                <payment_action>authorize</payment_action>
				<transaction>1</transaction>
                <model>infinitiumepayment/method_direct</model>
			</epayment>
		</payment>
	</default>
	<frontend>
		<routers>
			<infinitiumepayment>
				<use>standard</use>
				<args>
					<module>Movent_InfinitiumEpayment</module>
					<frontName>infinitiumepayment</frontName>
				</args>
			</infinitiumepayment>
		</routers>
	</frontend>
</config>
